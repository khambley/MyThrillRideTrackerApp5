<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Upload Image:</label>
                <div class="control-label">
                    <span id="list"></span>
                    @*<img id="user_img0" width="100" />
                    <img id="user_img1" width="100" />*@
                </div>
                <input id="images" type="file" asp-for="ImageFiles" name="files" multiple class="form-control no-border no-padding-left" onchange="showAndPreviewImages()" />
                <script type="text/javascript">
                    //function show(input) {
                    //    if (input.files && input.files[0]) {
                    //        var filereader = new FileReader();
                    //        for (var i = 0; i < 11; i++) {
                    //            filereader.onload = function (e) {
                    //                $('#user_img' + i).attr('src', e.target.result);
                    //            }
                    //            filereader.readAsDataURL(input.files[0]);
                    //        }
                            
                    //    }
                    //}
                    function showAndPreviewImages() {
                        var files = document.getElementById("images").files;

                        for (var i = 0; i < files.length; i++) {
                            let file = files[i];
                            var reader = new FileReader();
                            reader.onload = function (e) {
                                var span = document.createElement('span');
                                span.innerHTML = ['<img src="', e.target.result,
                                    '" width="100"', escape(file.name), '">&nbsp;&nbsp;'
                                ].join('');
                                document.getElementById('list').insertBefore(span, null);
                            };
                            reader.readAsDataURL(file);
                        }
                    }
                </script>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WebsiteLink" class="control-label"></label>
                <input asp-for="WebsiteLink" class="form-control" />
                <span asp-validation-for="WebsiteLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParkMapLink" class="control-label"></label>
                <input asp-for="ParkMapLink" class="form-control" />
                <span asp-validation-for="ParkMapLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

